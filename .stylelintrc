{
  'extends': [
    'stylelint-config-recommended'
  ],
  ignoreFiles: [
    'src/**/*.{ts,tsx}'
  ],
  options: {
    files: 'keycloak/**/*.css'
  },
  rules: {
    'at-rule-no-unknown': [
      true,
      {
        ignoreAtRules: [
          'extends',
          'ignores'
        ]
      }
    ],
    'block-closing-brace-newline-after': 'always',
    indentation: 2,
    'no-descending-specificity': null,
    'unit-whitelist': [
      'em',
      'rem',
      's',
      '%',
      'px',
      'ms'
    ]
  }
}